{
  "name": "memoriahub",
  "version": "0.1.0",
  "private": true,
  "description": "Privacy-first family photo and media platform",
  "repository": {
    "type": "git",
    "url": "https://github.com/marinoscar/MemoriaHub.git"
  },
  "license": "MIT",
  "author": "Oscar Marin",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:integration": "npm run test:integration --workspace=apps/api",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "db:migrate": "npm run db:migrate --workspace=apps/api",
    "db:seed": "npm run db:seed --workspace=apps/api",
    "db:reset": "npm run db:reset --workspace=apps/api",
    "docker:dev": "docker compose -f infra/compose/dev.compose.yml up -d",
    "docker:dev:down": "docker compose -f infra/compose/dev.compose.yml down",
    "docker:dev:logs": "docker compose -f infra/compose/dev.compose.yml logs -f",
    "docker:infra": "docker compose -f infra/compose/infra-only.compose.yml up -d",
    "docker:infra:down": "docker compose -f infra/compose/infra-only.compose.yml down",
    "docker:reset": "docker compose -f infra/compose/dev.compose.yml down -v"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.1.3",
    "@vitest/ui": "^1.1.3",
    "typescript": "^5.3.0",
    "vitest": "^1.1.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
